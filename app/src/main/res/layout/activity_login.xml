<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 페이지"
        style="@style/Title" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="email"
        style="@style/LoginButtons"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="password"
        style="@style/LoginButtons"/>

    <android.widget.Button
        android:id="@+id/login_signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round"
        style="@style/LoginButtons"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/drawable_left_image_costomise_signup"
        android:text="회원 가입" />

    <android.widget.Button
        android:id="@+id/login_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round"
        style="@style/LoginButtons"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/drawable_left_image_costomise_login"
        android:text="로그인" />

    <android.widget.Button
        android:id="@+id/google_login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/drawable_left_image_costomise_google_login"
        android:text="구글 로그인"
        style="@style/LoginButtons"
        android:textColor="@color/black" />

</LinearLayout>
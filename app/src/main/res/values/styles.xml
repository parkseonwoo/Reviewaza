<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "myPageTextView">
        <item name ="android:textSize">40sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Value" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainPage">
        <item name="layout_constraintHeight_percent">0.1</item>
        <item name="layout_constraintWidth_percent">0.1</item>
    </style>

    <style name="LoginButtons">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTextViews">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
    </style>

    <style name="ReviewsViews">
        <item name="android:padding">20dp</item>
    </style>

    <style name="thumbs">
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="Fcm_Dialog_Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Fcm_Dialog_Value" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Call_Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Call_Value" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>